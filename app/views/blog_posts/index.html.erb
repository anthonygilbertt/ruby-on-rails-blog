<h1>Blog Posts by Anthony Gilbert</h1>
<div class = "row">
  <% @blog_posts.each do |blog_post| %>
    <div class="col-md-6">
      <div class="panel panel-default">

        <div class="panel-heading">
          <%= blog_post.title %>
        </div>

        <div class="panel-body">
          Created By: <%= blog_post.author%>
          <p><%= blog_post.blog_entry %></p>
        </div>

        <div class="panel-footer">
          <%= link_to 'Show', blog_post_path(blog_post), class: 'btn btn-primary'  %>
          <%= link_to 'Edit', edit_blog_post_path(blog_post), class: 'btn btn-warning' %>
          <%= link_to 'Delete', blog_post_path(blog_post), method: :delete, data: {confirm: 'Are you sure you want to delete this blog post?'}, class: 'btn btn-danger' %>
        </div>

      </div>
    </div>
  <% end  %>
</div>

<%= link_to 'Create Your Own Blog Post', new_blog_post_path, class: 'btn btn-primary' %>
